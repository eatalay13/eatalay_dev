model Language {
    id                   String               @id @default(uuid())
    code                 String               @unique @db.VarChar(10) // tr, en, de, fr, etc.
    name                 String               @db.VarChar(50)
    isDefault            Boolean              @default(false)
    isActive             Boolean              @default(true)
    createdAt            DateTime             @default(now())
    updatedAt            DateTime             @updatedAt
    htmlSeoContents      HtmlSeoContentI18n[]
    blogTranslations     BlogI18n[]
    categoryTranslations CategoryI18n[]
    projectTranslations  ProjectI18n[]
    tagTranslations      TagI18n[]

    @@index([id])
    @@index([code])
    @@map("languages")
}
