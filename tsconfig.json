{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "typescript-plugin-styled-components",
        "options": {
          "displayName": true
        }
      },
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.module\\.css$",
          "camelCase": true
        }
      },
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.module\\.scss$",
          "camelCase": true
        }
      },
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.module\\.sass$",
          "camelCase": true
        }
      },
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.module\\.less$",
          "camelCase": true
        }
      },
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.module\\.styl$",
          "camelCase": true
        }
      }
    ],
    "paths": {
      "@app/*": ["./app/*"],
      "@comp/*": ["./components/*"],
      "@sty/*": ["./styles/*"],
      "@container/*": ["./containers/*"],
      "@img/*": ["./public/images/*"],
      "@data/*": ["./data/*"],
      "@services/*": ["./services/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
